{
  "name": "online-ink-editor",
  "private": true,
  "version": "0.5.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "docs:build": "vite build --outDir docs --base /online-ink-editor/",
